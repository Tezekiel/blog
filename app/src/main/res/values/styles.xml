<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
    </style>

    <style name="ButtonMenu" parent ="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/green_blue</item>
        <item name ="android:layout_width">200dp</item>
        <item name ="android:layout_height">60dp</item>
        <item name ="android:textSize">16sp</item>
        <item name ="android:layout_marginTop">12dp</item>
    </style>

    <style name="ButtonOther" parent ="ButtonMenu">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="FormField" parent="Widget.Design.TextInputLayout">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Toolbar">
        <item name="android:background">@color/light_green</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="elevation">0dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>